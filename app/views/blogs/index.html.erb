<div class="py-3">
  <h3 class="text-center">Blog List</h3>

  <div class="text-center">
    <%= link_to "New blog", new_blog_path %>
  </div>
 


  <div id="blogs" class="py-3">
    <div class="table-responsive">
      <%# Show message when update or create success %>
      <p class="text-success text-center mb-3"><%= notice %></p>
      
      <%# Table show data Area %>
      <table id="blog-list" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Published At</th>
            <th>Comment Count</th>
            <th></th>
            </tr>
        </thead>
        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= blog.id %></td>
              <td><%= link_to blog.title, blog_url(blog) %></td>
              <td><%= blog.published_at %></td>
              <td>0</td>
              <td>
                <%= link_to "Edit", edit_blog_path(blog), class: "mr-2" %>

                <%= link_to 'Delete', blog_path(blog), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this blog?' }, :class => "text-danger btn-link" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# Pagination Area %>
    <div class="mt-3">
      <%= paginate @blogs %>
    </div>
  </div>
</div>

